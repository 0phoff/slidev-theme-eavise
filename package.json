{
  "name": "slidev-theme-eavise",
  "version": "0.0.0",
  "description": "EAVISE Theme for Slidev",
  "author": "0phoff",
  "license": "MIT",
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "engines": {
    "node": ">=14.0.0",
    "slidev": ">=0.19.3"
  },
  "scripts": {
    "dev": "slidev example.md",
    "build": "slidev build example.md",
    "export": "slidev export example.md --per-slide",
    "screenshot": "slidev export example.md --per-slide --format png"
  },
  "dependencies": {
    "@slidev/types": "^0.40.14",
    "@unocss/reset": "^0.51.8",
    "codemirror-theme-vars": "^0.1.2",
    "prism-theme-vars": "^0.2.4"
  },
  "devDependencies": {
    "@slidev/cli": "^0.40.14",
    "playwright-chromium": "^1.33.0"
  },
  "slidev": {
    "colorSchema": "light",
    "highlighter": "prism",
    "defaults": {
      "css": "unocss",
      "canvasWidth": 1280,
      "favicon": "https://gitlab.com/EAVISE/branding/logo/-/raw/master/color/icon_eavise.svg",
      "fonts": {
        "sans": "Roboto",
        "serif": "Electrolize",
        "mono": "Fira Code",
        "italic": true,
        "weights": "100,200,400,500,600,700,900"
      },
      "themeConfig": {
        "primary": "var(--kul-blue-800)",
        "secondary": "var(--kul-blue-400)"
      }
    }
  }
}
