{
  "name": "slidev-theme-eavise",
  "version": "1.1.1-rc1",
  "description": "EAVISE Theme for Slidev",
  "author": "0phoff",
  "license": "MIT",
  "keywords": [
    "slidev",
    "slidev-theme",
    "eavise",
    "ku leuven",
    "presentation",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/0phoff/slidev-theme-eavise"
  },
  "bugs": "https://github.com/0phoff/slidev-theme-eavise/issues",
  "files": [
    "components/*",
    "layouts/*",
    "setup/*",
    "styles/*",
    "LICENSE",
    "package.json",
    "README.md",
    ".npmrc"
  ],
  "engines": {
    "node": ">=14.0.0",
    "slidev": ">=0.47.0"
  },
  "scripts": {
    "dev": "slidev example.md",
    "build": "slidev build example.md",
    "export": "slidev export example.md --per-slide",
    "screenshot": "slidev export example.md --per-slide --format png"
  },
  "dependencies": {
    "@slidev/types": "^0.47.5",
    "@unocss/reset": "^0.58.5",
    "codemirror-theme-vars": "^0.1.2",
    "prism-theme-vars": "^0.2.4"
  },
  "devDependencies": {
    "@slidev/cli": "^0.47.5",
    "playwright-chromium": "^1.41.2"
  },
  "slidev": {
    "colorSchema": "light",
    "highlighter": "prism",
    "defaults": {
      "css": "unocss",
      "highlighter": "prism",
      "canvasWidth": 1280,
      "favicon": "https://gitlab.com/EAVISE/branding/logo/-/raw/master/color/icon_eavise.svg",
      "fonts": {
        "sans": "Roboto",
        "serif": "Electrolize",
        "mono": "Fira Code",
        "italic": true,
        "weights": "100,200,300,400,500,600,700,900"
      },
      "themeConfig": {
        "primary": "var(--kul-blue-600)",
        "secondary": "var(--kul-blue-200)"
      }
    }
  }
}
